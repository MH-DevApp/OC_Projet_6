{% extends 'base.html.twig' %}

{% block title %}Figure {{ trick.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset("assets/styles/trick-details.css") }}" type="text/css" />
{% endblock %}

{% block javascripts %}
    <script src="{{ asset("assets/scripts/details-trick.js") }}" type="module"></script>
{% endblock %}

{% block body %}
    <div class="flex-fill d-flex flex-column">
        <div id="pictureFeaturedTrick" class="d-flex container p-0 justify-content-center position-relative bg-dark bg-opacity-10 w-100">
            {% set linkFeatured = null %}
            {% if trick.pictureFeatured == null %}
                {% if trick.mediaTricks|filter(media => media.type == "image")|length > 0 %}
                    {% set linkFeatured = "tricks/" ~ trick.mediaTricks|filter(media => media.type == "image")|first.link %}
                {% else %}
                    {% set linkFeatured = "static/default-picture.png" %}
                {% endif %}
            {% else %}
                {% set linkFeatured = "tricks/" ~ trick.pictureFeatured.link %}
            {% endif %}
            <img
                    data-media-show
                    class="w-100 shadow"
                    src="{{ asset("assets/images/" ~ linkFeatured ) }}"
                    alt="image de '{{ trick.pictureFeatured.sourceName ?? "Inconnu" }}' - {{ trick.name }}"
            />
            <div class="position-absolute bottom-0 w-100 h-100 d-flex align-items-end justify-content-center mb-5">
                <h1 class="title-trick-name bg-dark bg-opacity-75 text-white p-2 px-4">{{ trick.name }}</h1>
            </div>
            {% if is_granted("ROLE_USER") %}
                <div id="containerActions" class="position-absolute top-0 end-0 d-flex gap-2 bg-dark bg-opacity-75 flex-nowrap justify-content-center p-2 m-2">
                    <a class="btn btn-primary btn-sm me-1" href="#">
                        <i class="fas fa-pen"></i>
                    </a>
                    <a data-role=deleteTrick class="btn btn-danger btn-sm" href="{{ path("app_trick_delete", { 'slug': trick.slug } ) }}">
                        <i class="fas fa-trash"></i>
                    </a>
                </div>
            {% endif %}
            <div data-media-source class="{{ trick.pictureFeatured.sourceName ? "d-flex" : "d-none"}} position-absolute start-0 bottom-0 w-100">
                <div class="d-flex w-100 gap-2 p-2 link-light bg-dark bg-opacity-75">
                    <span>Source: </span>
                    <a class="link-info" href="{{ trick.pictureFeatured.sourceLink ?? '#' }}">{{ trick.pictureFeatured.sourceName ?? "" }}</a>
                </div>
            </div>
        </div>
        {% if trick.mediaTricks|length %}
            <div class="d-flex justify-content-center mt-3">
                <button data-role=seeMedias type="button" class="d-block d-sm-none btn btn-sm btn-outline-primary">Voir les médias</button>
            </div>
            <div id="containerMedias" class="d-none d-sm-flex container-sm flex-column flex-sm-row w-100 justify-content-center justify-content-sm-start gap-2 mt-3">
                {% if trick.pictureFeatured %}
                    <div data-media-trick class="d-flex justify-content-center position-relative bg-white bg-opacity-50">
                        <img
                                data-media-image
                                class="shadow p-1 bg-primary"
                                src="{{ asset("assets/images/tricks/" ~ trick.pictureFeatured.link ) }}"
                                alt="image de '{{ trick.pictureFeatured.sourceName ?? "Inconnu" }}' - {{ trick.name }}"
                        />
                        <div data-media-source class="{{ trick.pictureFeatured.sourceName ? "d-flex" : "d-none" }} position-absolute start-0 bottom-0 w-100 p-1">
                            <div class="d-flex w-100 gap-2 p-2 link-light bg-dark bg-opacity-75">
                                <span>Source: </span>
                                <a class="link-info" href="{{ trick.pictureFeatured.sourceLink ?? '#' }}">{{ trick.pictureFeatured.sourceName ?? "" }}</a>
                            </div>
                        </div>
                    </div>
                {% endif %}
                {% for mediaTrick in trick.mediaTricks|filter(mediaTrick => mediaTrick.type == "image") %}
                    <div data-media-trick class="d-flex justify-content-center position-relative">
                        <img
                            data-media-image
                            class="shadow p-1 {{ loop.first and not trick.pictureFeatured ? "bg-primary" : "bg-white" }}"
                            src="{{ asset("assets/images/tricks/" ~ mediaTrick.link ) }}"
                            alt="image de '{{ mediaTrick.sourceName ?? "Inconnu" }}' - {{ trick.name }}"
                        />
                        <div data-media-source class="{{ mediaTrick.sourceName ? "d-flex" : "d-none" }} position-absolute start-0 bottom-0 w-100">
                            <div class="d-flex w-100 gap-2 p-2 link-light bg-dark bg-opacity-75">
                                <span>Source: </span>
                                <a class="link-info" href="{{ mediaTrick.sourceLink ?? '#' }}">{{ mediaTrick.sourceName }}</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                {% for mediaTrick in trick.mediaTricks|filter(mediaTrick => mediaTrick.type == "video") %}
                    <div data-media-trick class="d-flex justify-content-center position-relative bg-white bg-opacity-50">
                        <iframe class="shadow p-1" src="{{ mediaTrick.link }}" allowfullscreen></iframe>
                    </div>
                {% endfor %}
            </div>
        {% endif %}
        <div id="containerDescription" class="container d-flex w-100 gap-3 p-3">
            {{ trick.description|nl2br }}
        </div>
        <div id="containerInfos" class="container d-flex flex-wrap justify-content-center w-100 gap-3 p-3">
            <span class="badge bg-dark text-white py-3 px-4">Créé le : {{ trick.createdAt|date("d/m/y") }}</span>
            <span class="badge bg-dark text-white py-3 px-4">Auteur : {{ trick.author.username }}</span>
            <span class="badge bg-dark text-white py-3 px-4">Groupe : {{ trick.groupTrick }}</span>
            {% if trick.lastUpdatedAt %}
                <span class="badge bg-dark text-white py-3 px-4">Modifié le : {{ trick.lastUpdatedAt|date("d/m/y") }}</span>
            {% endif %}
        </div>
        {% if is_granted("ROLE_USER") %}
            <hr class="w-50 align-self-center">
            <div id="containerComments" class="d-flex flex-column flex-sm-row container align-items-center justify-content-center w-100 gap-2 p-3">
                <div class="flex-fill ms-0 ms-sm-5">
                    <input type="text" name="comment" id="comment" class="form-control">
                </div>
                <div class="d-flex justify-content-center me-0 me-sm-5">
                    <button type="button" class="btn btn-sm btn-primary">Ajouter un commentaire</button>
                </div>
            </div>
        {% endif %}
        <hr class="w-50 align-self-center">
        <div class="container d-flex flex-column align-items-center justify-content-center w-100 my-3">
            {% if trick.comments|length %}

            {% else %}
                <p>
                    Aucun commentaire, soyez le premier !
                    {% if not is_granted("ROLE_USER") %}
                        <a href="{{ path("app_auth_login") }}" class="link-primary">Se connecter</a>
                    {% endif %}
                </p>
            {% endif %}
        </div>
    </div>
{% endblock %}
