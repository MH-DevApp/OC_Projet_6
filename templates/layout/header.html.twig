<header>
    <nav class="d-none d-sm-flex navbar flex-nowrap fixed-top">
        <div class="container-fluid align-items-end">
            <a class="navbar-brand fs-1" href="{{ path("home") }}">
                <img src="{{ asset("/assets/images/static/brand.jpg") }}" alt="Brand image" class="d-inline-block align-text-bottom">
                Snowtricks
            </a>
            <div class="d-flex flex-nowrap gap-2 pb-2">
                <a class="link-light" href="{{ path("home") }}">
                    <i class="fa-solid fa-house"></i>
                    <span class="ps-1">Accueil</span>
                </a>
                <span class="text-light">|</span>
