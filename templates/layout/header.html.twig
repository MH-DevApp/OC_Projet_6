            </a>
        {% else %}
            <a class="link-light" href="#" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Inscription">
                <i class="fa-solid fa-user-plus"></i>
            </a>
            <a class="link-light" href="{{ path('app_auth_login') }}" data-bs-toggle="tooltip" data-bs-placement="top" data-bs-title="Se connecter">
                <i class="fa-solid fa-right-to-bracket"></i>
            </a>
